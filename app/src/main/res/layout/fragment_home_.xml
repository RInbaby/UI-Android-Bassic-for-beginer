<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homefragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HELLO, YEN NHI! "
                    android:textColor="@color/colorlogin"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:textSize="22dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingTop="4dp"
                    android:background="@drawable/search"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    android:paddingBottom="4dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/edt_search_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:hint="@string/Search"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:lines="1"
                        android:textColorHint="@color/colorLogin2"
                        android:textColor="@color/colorEdt"
                        android:textSize="15sp"
                        android:background="@android:color/transparent"/>

                    <ImageView
                        android:id="@+id/iv_clear_text"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="8dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/search1"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="157dp"
                    android:src="@drawable/bac1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:text="@string/Feature"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        android:layout_margin="18dp"
                        android:textColor="@color/colorlogin"/>
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:paddingLeft="9dp"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/listitem"
                            android:textSize="13dp"
                            android:text="@string/Education"/>
                        <TextView
                            android:layout_width="5dp"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/listitem"
                            android:textSize="13dp"
                            android:text="@string/Projects"/>
                        <TextView
                            android:layout_width="5dp"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/listitem"
                            android:textSize="13dp"
                            android:text="@string/Schoolarship"/>
                        <TextView
                            android:layout_width="5dp"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/listitem"
                            android:textSize="13dp"
                            android:text="@string/About"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:orientation="horizontal">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcvimg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginHorizontal="10dp"
                            android:padding="9dp"/>

                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="300dp"
                        android:background="@drawable/seeall"
                        android:text="@string/see"
                        android:textColor="@color/colorlogin"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="@drawable/search"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/News"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        android:layout_margin="15dp"
                        android:textColor="@color/colorlogin"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv2"
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="horizontal" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="300dp"
                        android:text="@string/see"
                        android:textSize="15dp"
                        android:background="@drawable/seeall"
                        android:textColor="@color/colorlogin"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="9dp"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="@drawable/search"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:text="@string/Society"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        android:layout_margin="18dp"
                        android:textColor="@color/colorlogin"/>
<!--                    <LinearLayout-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="190dp"-->
<!--                        android:orientation="vertical">-->

<!--                        <androidx.recyclerview.widget.RecyclerView-->
<!--                            android:id="@+id/society"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:orientation="horizontal"-->
<!--                            android:layout_marginHorizontal="10dp"-->
<!--                            android:padding="9dp"/>-->
<!--                        <androidx.recyclerview.widget.RecyclerView-->
<!--                            android:id="@+id/society2"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:orientation="horizontal"-->
<!--                            android:layout_marginHorizontal="10dp"-->
<!--                            android:padding="9dp"/>-->

<!--                    </LinearLayout>-->

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="@drawable/search"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Events"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        android:layout_margin="18dp"
                        android:textColor="@color/colorlogin"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvevent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="10dp"
                        android:padding="15dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="300dp"
                        android:text="@string/see"
                        android:textSize="15dp"
                        android:background="@drawable/seeall"
                        android:textColor="@color/colorlogin"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
